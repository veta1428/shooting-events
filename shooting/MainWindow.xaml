<Window x:Name="MainForm" x:Class="shooting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shooting"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="300" MinWidth="500" Height="450" Width="800" KeyDown="MainForm_KeyDown">
    <Grid x:Name="grid" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button x:Name="enter" Content="Enter" HorizontalAlignment="Left" Margin="312,168,0,0" VerticalAlignment="Top" Width="75" Click="enter_Click" Height="28"/>
        <TextBox x:Name="textbox" HorizontalAlignment="Left" Margin="127,168,0,0" VerticalAlignment="Top" Width="100" Height="28" FontSize="16"/>
        <Label x:Name="showmistake" Content =" " HorizontalAlignment="Left" Margin="255,216,0,0" VerticalAlignment="Top" Width="231" Height="28"/>
        <Label x:Name="rules" Content="Enter integer from 20 to 200" HorizontalAlignment="Left" Margin="127,84,0,0" VerticalAlignment="Top" FontSize="20" />
        <Label x:Name="mainname" Content="Welcome to the shooting range!" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="48,10,0,0" FontSize="30"/>
    </Grid>
</Window>
